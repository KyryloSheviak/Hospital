@model Hospital.WEB.ViewModels.AboutUserViewModel

@{
    ViewData["Title"] = "Информация о пациенте";
}

<h1>Информация о пациенте</h1>

<div>
    <hr />
    <div class="row">
        <div class="row pl-5 pr-5">
            <div class="col">
                <div class="card">
                    @if (Model.Sex == 'М')
                    {
                        <img src="~/img/avatar_male.png" alt="Avatar" style="width:100%">
                    }
                    else
                    {
                        <img src="~/img/avatar_female.png" alt="Avatar" style="width:100%">
                    }
                    <div class="container">
                        <h4><b>@Model.Fio</b></h4>
                    </div>
                </div>
            </div>
            <div class="col">
                <dl class="row">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Email)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Email)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.PhoneNumber)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.PhoneNumber)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Sex)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Sex)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.BirthDate)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.BirthDate)
                    </dd>
                </dl>
            </div>
        </div>
        <div class="w-100"></div>
        <div class="col text-center pt-4">
            <button type="button" class="btn btn-primary">Получить историю пациента</button>
            <button type="button" class="btn btn-primary">Запрос 2</button>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index">К списку </a>
</div>


<style>
.card {
    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
    transition: 0.3s;
}

.card:hover {
    box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
}

.container {
    padding: 2px 16px;
}
</style>